                    <span class="ion-ios-cart-outline" aria-hidden="true">
                    <span id="CartCount">{{ cart.item_count }}</span>
                </span>
                    <span class="fallback-text">{{ 'layout.cart.title' | t }}</span>
                  </span>
                              </a>
                          </div>
                      </div>
                  </div>
              </div>
              {% comment %}
              If customer accounts are enabled, provide login and create account links
              {% endcomment %}
              {% if shop.customer_accounts_enabled %}
              <div class="login__main medium-down--hide" style="display: table-cell;">
                      <i class="ion-ios-contact-outline user-icon"></i>
                  {% if customer %}
                      {% if customer.first_name != blank %}
                          {% capture first_name %}<a href="/account">
                          {{ customer.first_name }}</a>{% endcapture %}
                          {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
                      {% else %}
                          <a href="/account">
                          {{ 'layout.customer.account' | t }}</a>
                      {% endif %}
                      | {{ 'layout.customer.log_out' | t | customer_logout_link }}
                  {% else %}
                      {{ 'layout.customer.log_in' | t | customer_login_link }}
                      | {{ 'layout.customer.create_account' | t | customer_register_link }}
                  {% endif %}
              </div>
              {% endif %}
          </div>
      </nav>

      <header class="site-header" role="banner">
        <div class="wrapper">

          <div class="grid--full grid--table">
            <div class="grid__item large--one-third" style="position: relative">
              {% comment %}
              Use the uploaded logo from theme settings if enabled.
              Site name gets precedence with H1 tag on homepage, div on other pages.
              {% endcomment %}
              {% if template == 'index' %}
              <h1 class="site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
                {% else %}
                <div class="h1 site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
                  {% endif %}
                  {% if settings.logo_use_image %}
                    <a href="/" itemprop="url" class="site-header__logo-link">
                      {% include 'logo' %}
                    </a>
                  {% else %}
                    <a href="/" itemprop="url">{{ shop.name }}</a>
                  {% endif %}
                  {% if template == 'index' %}
              </h1>
              {% else %}
            </div>
            {% endif %}
          </div>
          <div class="grid__item large--one-quarter large--text-center medium-down--hide flex v-center">
            <a href="https://goo.gl/maps/4q7jECyxaQu" target="_blank" class="site-header__cart-toggle js-drawer-open-right flex v-center" aria-controls="CartDrawer" aria-expanded="false">            
